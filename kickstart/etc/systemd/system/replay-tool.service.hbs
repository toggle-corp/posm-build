[Unit]
Description=POSM Replay Tool
After=docker.service
Requires=docker.service

[Service]
# Restart=always
Restart=on-failure
EnvironmentFile=/opt/replay-tool/posm-replay-server/.env
WorkingDirectory=/opt/replay-tool/posm-replay-server
ExecStart=/bin/bash run.sh
ExecStop=/usr/local/bin/docker-compose stop


[Install]
WantedBy=multi-user.target
